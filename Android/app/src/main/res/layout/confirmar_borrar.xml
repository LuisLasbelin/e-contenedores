<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:padding="5dp"
        android:text="Esta seguro de que quiere borrar el cubo permanentemente"
        android:textSize="16sp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="5dp"
        android:text="Desea eliminar los registros" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="right"
        android:orientation="horizontal">


        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:background="#fff"
            android:drawableLeft="@drawable/ic_baseline_close_24"
            android:drawablePadding="7dp"
            android:onClick="eliminarCancelar"
            android:padding="7dp"
            android:paddingEnd="7dp"
            android:text="Cancelar"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#28A525"
            android:textColorHint="#FFFFFF" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="16dp"
            android:background="#fff"
            android:drawableLeft="@drawable/ic_baseline_delete_24"
            android:drawablePadding="7dp"
            android:onClick="eliminarCubo"
            android:padding="7dp"
            android:paddingEnd="7dp"
            android:text="Eliminar"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#28A525"
            android:textColorHint="#FFFFFF" />


    </LinearLayout>

</LinearLayout>

